@using doan.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<XE>

@{
    ViewBag.Title = "Sanpham";
    Layout = "~/Views/Shared/_Sanpham.cshtml";
}
<div class="mens">
    <div class="main">
        <div class="wrap">
            <div class="cont span_2_of_3">
                <h2 class="head">TẤT CẢ SẢN PHẨM</h2>                   <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/04-module.css" rel="stylesheet" />
    <link href="~/Content/03-default.css" rel="stylesheet" />
    <link href="~/Content/02-common.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/00-reset.css" rel="stylesheet" />
                <div class="top-box">
                    @foreach (var xe in Model)
                    {
                    <div class="col_1_of_3 span_1_of_3">
                        <a href="@Url.Action("Chitiet", "oto", new { id = xe.Maxe})">
                            <div class="inner_content clearfix">
                                <div class="product_image">
                                    <img src="~/Hinh/@xe.Anhbia" width="274.05px" height="182.03px" alt="">
                                </div>
                                <div class="sale-box"><span class="on_sale title_shop">New</span></div>
                                <div class="price">
                                    <div class="cart-left">
                                        <p class="title">@xe.Tenxe</p>
                                        <div class="price1">
                                            <span class="actual">@String.Format("{0:0,0}", @xe.Giaban) VNĐ</span>
                                        </div>
                                    </div>
                                    <div class="cart-right"> </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </a>
                    </div>    
                    }
                                              
                </div>                                 
            </div>
            <div class="rsidebar span_1_of_left">
                <h5 class="m_1">NHÀ SẢN XUẤT</h5>
                <ul class="kids">
                    <li><a href="~/oto/SPTheoloaixe/1">Lexus</a></li>
                    <li class="last"><a href="~/oto/SPTheoloaixe/2">Audi</a></li>
                    <li><a href="~/oto/SPTheoloaixe/3">Lambogrini</a></li>
                    <li><a href="~/oto/SPTheoloaixe/4">BMW</a></li>
                    <li><a href="~/oto/SPTheoloaixe/5">Toyota</a></li>
                    <li><a href="~/oto/SPTheoloaixe/6">Chevrolet</a></li>
                </ul>                                                                           
            </div>
            <div class="clear"></div>
        </div>
        <div class="trang" >
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
        </div>
        <div class="MenuTrang">

            @Html.PagedListPager(Model, page => Url.Action("Sanpham", new { page = page }))
        </div>
        <style>
            .MenuTrang li {
                display: inline;
            }
        </style>
    </div>
</div>


